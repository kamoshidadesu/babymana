<%= form_with(model: @event, local: true) do |form| %>

  <div class="title">
    <%= form.label "予定" %>
    <%= form.text_field :schedule %>
  </div>

  <div class="time">
    <%= form.label "日時" %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= form.label "内容" %>
    <%= form.text_field :content %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>