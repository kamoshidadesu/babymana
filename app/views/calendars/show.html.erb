<%= render "shared/header" %>
  <div class="calendar-show">
    <h1 class="calendar-show-top">予定一覧</h1>
    <div class="calendar-show-date"><%= @calendar.start_time.strftime("%Y-%m-%d") %></div>
    <div class = "calendar-show-main">
      <table class= "table">
        <thead>
          <tr class = "show-titles" >
            <th class="calendar-show-title">時間</th>
            <th class="calendar-show-title">予定</th>
            <th class="calendar-show-title">内容</th>
          </tr>
        </thead>

        <tbody>
          <% @calendars.each do |calendar| %>
            <tr>
              <td class="calnedar-show-content">
                <%= calendar.start_time.strftime("%H:%M") %>~<%= calendar.end_time.strftime("%H:%M") %>
                <%= link_to "(変更する)", edit_calendar_path(calendar), method: :get, class: "calendar-show-btn" %>
                <%= link_to "(削除する)", calendar_path(calendar), method: :delete, class: "calendar-show-btn" %>
              </td>
              <td class="calendar-show-content"><%= calendar.schedule %></td>
              <td class="calendar-show-content"><%= calendar.content %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>

<%= render "shared/fotter" %>
